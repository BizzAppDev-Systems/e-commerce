<data>
    <template id="alt_price" name="Alternative taxes">
        <span t-if="combination_info.get('alt_price') != combination_info['price']">
            <del
                t-attf-class="js_alt_list_price mr8 text-muted text-nowrap #{ '' if combination_info['has_discounted_price'] else 'd-none' }"
                t-esc="combination_info['alt_list_price']"
                t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"
            />
            <span
                class="js_alt_price"
                t-esc="combination_info['alt_price']"
                t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"
            />
            <span
                t-if="combination_info['alt_field'] == 'total_included'"
            >with taxes</span>
            <span
                t-if="combination_info['alt_field'] == 'total_excluded'"
            >without taxes</span>
        </span>
    </template>

    <template id="alt_price_products_item" name="Alternative taxes">
        <t t-set="combination_info_values" t-value="get_product_prices(product)" />
        <t
            t-set="combination_info"
            t-value="combination_info_values.get('combination_info')"
        />
        <span t-if="combination_info.get('alt_price') != combination_info.get('price')">
            <del
                t-attf-class="js_alt_list_price mr8 text-muted text-nowrap #{ '' if combination_info['has_discounted_price'] else 'd-none' }"
                t-esc="combination_info['alt_list_price']"
                t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"
            />
            <span
                class="js_alt_price"
                t-esc="combination_info['alt_price']"
                t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"
            />
            <span
                t-if="combination_info['alt_field'] == 'total_included'"
            >with taxes</span>
            <span
                t-if="combination_info['alt_field'] == 'total_excluded'"
            >without taxes</span>
        </span>
    </template>

    <template
        id="products_item"
        name="Alternative (un)taxed price"
        inherit_id="website_sale.products_item"
        customize_show="True"
    >
        <xpath expr="//div[hasclass('product_price')]">
            <p
                class="text-muted small"
                t-call="website_sale_b2x_alt_price.alt_price_products_item"
            />
        </xpath>
    </template>

    <template
        id="product_price"
        name="Alternative (un)taxed price"
        inherit_id="website_sale.product_price"
        customize_show="True"
    >
        <xpath expr="//div[contains(@t-attf-class, 'product_price')]">
            <p class="text-muted small" t-call="website_sale_b2x_alt_price.alt_price" />
        </xpath>
    </template>

    <template
        id="sale_order_portal_template"
        inherit_id="sale.sale_order_portal_template"
    >
        <xpath expr="//t[@t-set='title']/h2" position="attributes">
            <attribute name="class">mb-0</attribute>
        </xpath>
        <xpath expr="//t[@t-set='title']">
            <t t-if="website.show_line_subtotals_tax_selection == 'tax_excluded'">
                <div class="text-center"><span
                        id="b2c_alt_amount"
                        class="d-inline-block mb-1"
                        t-field="sale_order.amount_untaxed"
                        data-id="untaxed_amount"
                    /><small> (without taxes)</small></div>
            </t>
            <t t-else="">
                <div class="d-flex flex-column">
                    <h2 class="mb-0"><b
                            t-field="sale_order.amount_untaxed"
                            data-id="untaxed_amount"
                        /> </h2>
                    <t t-if="any(sale_order.order_line.tax_id)"><div
                            class="text-center"
                        ><span
                                id="b2b_alt_amount"
                                class="d-inline-block mb-1"
                                t-field="sale_order.amount_total"
                                data-id="total_amount"
                            /><small> (with taxes)</small></div><div /></t>
                </div>
            </t>
        </xpath>
        <xpath expr="//span[@id='b2c_alt_amount']" position="before">
            <xpath expr="//t[@t-set='title']/h2" position="move" />
        </xpath>
    </template>
</data>
